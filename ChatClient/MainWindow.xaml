<Window x:Class="ChatClient.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChatClient"
        mc:Ignorable="d"
        Title="MainWindow" Height="348" Width="557" Closing="Window_Closing">
    <Grid Margin="0,0,12,10">
        <TextBox x:Name="MessageText" HorizontalAlignment="Left" Height="20" Margin="15,275,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="414"/>
        <Button Click="SendMessageButton_Click" x:Name="SendMessageButton" Content="Send" HorizontalAlignment="Left" Margin="444,275,0,0" VerticalAlignment="Top" Width="80"/>
        <Button Click="ConDisconButton_Click" x:Name="ConDisconButton" Content="Connect" HorizontalAlignment="Left" Margin="179,10,0,0" VerticalAlignment="Top" Width="80"/>
        <TextBox x:Name="NameText" Height="23" Margin="15,7,0,0" VerticalAlignment="Top" Text="New user" HorizontalAlignment="Left" Width="152"/>
        <ListBox x:Name="ChatList" Height="233" Margin="15,35,0,0" VerticalAlignment="Top" Width="508" HorizontalAlignment="Left"/>
        <Button Click="ShowLogButton_Click" x:Name="ShowLogButton" Content="Show log" HorizontalAlignment="Left" Margin="267,10,0,0" VerticalAlignment="Top" Width="80"/>
    </Grid>
</Window>
